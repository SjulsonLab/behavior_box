function D = date_weight_info(basedir)


cd(basedir);
[~,basename] = fileparts(pwd);

s = 0;
for idx = idxDir
    if (strfind(animalDir(idx).name,basename))
        cd(animalDir(idx).name)

            if isfile('sessionStr.mat')
                load ./sessionStr.mat
                session_info = sessionStr;
                flag = true;
            elseif isfile('session_info.mat')
                load ./session_info.mat
                flag = true;
            else
                flag = false;
            end

        if flag
        s = s+1;
        D(s).trainingPhase = session_info.trainingPhase;
        D(s).weight = session_info.weight;
        D(s).IrewardSize_nL = session_info.IrewardSize_nL;
        D(s).date = session_info.date;
        end
      cd(basedir) 
    end
end


%D.weight = [ses(:).weight];
%D.IrewardSize_nL = [ses(:).IrewardSize_nL];

%prepare dates transformation first
